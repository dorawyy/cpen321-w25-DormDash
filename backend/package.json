{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "test:file": "jest --coverage",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "seed-jobs": "node scripts/seed-test-jobs.js",
    "seed-jobs:ts": "ts-node scripts/seed-test-jobs.ts",
    "seed-availability-test-jobs": "ts-node scripts/seed-availability-test-jobs.ts",
    "clear-jobs": "ts-node scripts/clear-jobs.ts",
    "format": "prettier --check \"src/**/*.{ts,js,json}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,js,json}\""
  },
  "author": "",
  "license": "ISC",
  "description": "TypeScript backend project",
  "dependencies": {
    "dotenv": "^17.2.1",
    "express": "^4.18.0",
    "firebase-admin": "^13.5.0",
    "google-auth-library": "^10.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.18.0",
    "multer": "^2.0.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "stripe": "^19.1.0",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@jest/globals": "^30.2.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.0.0",
    "@types/stripe": "^8.0.416",
    "@types/supertest": "^6.0.2",
    "babel-jest": "^30.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.6.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/**/*.d.ts",
      "!src/**/*.d.ts",
      "!src/index.ts",
      "!src/socket.ts"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",

    "coverageReporters": [
      "text",
      "text-summary",
      "html",
      "lcov"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/dist/"
    ]
  }
}
